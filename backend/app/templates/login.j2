{% extends "page_base.j2" %} 

{% block title %}Login{% endblock %} 

{% block try %}
{% endblock %}

{% block sub_content %}
<div class="flex items-center justify-center h-screen">
  <div class="p-8 rounded-lg shadow-lg w-1/4">
    <h1 class="text-2xl font-bold mb-4 text-center">Login</h1>
    <form action="/login" method="post">
      <div class="mb-4">
        <label for="email" class="block text-sm font-medium text-gray-700 mb-2"
          >Email</label
        >
        <input
          type="email"
          id="email"
          name="email"
          placeholder="email"
          required
          class="ps-1 outline-none block w-full sm:text-sm border-2 border-gray-300 focus:border-gray-500 rounded-md h-[40px]"
        />
      </div>
      <div class="mb-6">
        <label
          for="password"
          class="block text-sm font-medium text-gray-700 mb-2"
          >Password</label
        >
        <input
          type="password"
          id="password"
          name="password"
          placeholder="password"
          required
          class="ps-1 outline-none block w-full sm:text-sm border-2 border-gray-300 focus:border-gray-500 rounded-md h-[40px]"
        />
      </div>
      <button
        type="submit"
        class="w-full bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-700 focus:outline-none focus:shadow-outline"
      >
        Log In
      </button>
      <p class="text-sm text-gray-500 mt-2">
        Don't have an account?
        <a href="/signup" class="text-blue-500 hover:text-blue-600">sign up</a>
      </p>
    </form>
  </div>
</div>
{% endblock %}
