{% extends "base.j2" %} 

{% block script %}
<script
  defer
  src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"
></script>
<script
  src="https://unpkg.com/htmx.org@1.9.10"
  integrity="sha384-D1Kt99CQMDuVetoL1lrYwg5t+9QdHe7NLX/SoJYkXDFfX37iInKRy5xLSi8nO7UC"
  crossorigin="anonymous"
></script>
{% block local_script%}
{% endblock %}

{% endblock %}


{% block content %}
<header class="bg-gray-800 text-white py-3">
  <div class="container mx-auto flex justify-between items-center">
    <a href="/">
      <h1 class="text-2xl font-bold">Present.ai</h1>
    </a>
    <nav class="text-sm">
      <ul class="flex space-x-6 items-center">
        <li><a href="#" class="hover:text-blue-500">Features</a></li>
        <li><a href="/pricing" class="hover:text-blue-500">Pricing</a></li>
        <li><a href="#"class="hover:text-blue-500">Blog</a></li>
        {% block try %}
        <li>
          <a href="/signup">
            <button
              class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 rounded"
            >
              Try for Free
            </button>
          </a>
        </li>
        {% endblock %}
      </ul>
    </nav>
  </div>
</header>

{% block sub_content %}
{% endblock %}

<footer class="bg-gray-800 text-white py-4">
  <div class="container mx-auto">
    &copy; 2024 Present.ai. All rights reserved.
  </div>
</footer>
{% endblock %}
