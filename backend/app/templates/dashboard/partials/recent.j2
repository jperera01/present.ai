{% if recent|length == 0 %}

<p>You don't have any presentations...</p>

{% else %}

{% for line in recent %}

<a href="/api/summary/{{ line.presentation_id }}">
  <div class=" bg-gradient-to-b from-sky-500 to-indigo-400 text-white shadow-lg rounded-lg overflow-hidden p-6 border border-gray-200">
      <h2 class="text-xl font-bold mb-2">Presentation {{ line.number }}</h2>
      <p class="text-md"><span class="font-bold">Title</span>: {{ line.name }}</p>
      {% if line.description %}
      <p class="text-md"><span class="font-bold">Description</span>: {{ line.description }}</p>
      {% endif %}
      <p class="text-md"><span class="font-bold">Presented</span>: {{ line.timestamp }}</p>
      <p class="text-md"><span class="font-bold">Length</span>: {{ line.length.minutes }} minutes, {{ line.length.seconds }} seconds</p>
  </div>
</a>
{% endfor %}

{% endif %}


